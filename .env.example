# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_PLAYLIST_ID=PLxxxxxxxxxxxxxxxxxx

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Turso Database (get from: turso db show --url && turso db tokens create)
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# Processing Configuration
PROCESSING_MODE=transcript
MAX_VIDEOS_PER_RUN=10
ENABLE_PRO_FALLBACK=false

# Output Configuration
OUTPUT_DIR=src/content/summaries

# Logging
LOG_LEVEL=info

# ============================================
# NETLIFY ENVIRONMENT VARIABLES
# Set these in Netlify Dashboard > Site settings > Environment variables
# ============================================

# GitHub Personal Access Token (for triggering workflows)
# Create at: https://github.com/settings/tokens
# Required scopes: repo, workflow
# GITHUB_PAT=ghp_xxxxxxxxxxxxxxxxxxxx

# GitHub Repository (format: owner/repo)
# GITHUB_REPO=your-username/youtube-summarizer-mvp
